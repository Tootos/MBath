@page "/proionta"
@page "/{categoryUrl}"

@inject ICategorySrvc CategoryService

<CategoryList/>


@code {
    [Parameter]
    public string categoryUrl { get; set; }

    public bool hasProducts = false;
   
    protected override async Task OnParametersSetAsync()
    {
        
        if (categoryUrl==null)
        {

            await CategoryService.GetParentCategoriesAsync();
        }
        else
        {
            await CategoryService.GetCategoriesAsync(categoryUrl);
        }                 
        
    }

}
